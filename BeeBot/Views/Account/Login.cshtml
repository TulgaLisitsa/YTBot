@using BeeBot.Models
@model BeeBot.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
}

@*<h2>@ViewBag.Title.</h2>*@
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<div class="container">
    <div class="omb_login">
        <div class="row omb_row-sm-offset-3 omb_loginOr">
            <img src="@Url.Content("~/Content/ytb_logo_small.png")" style="display: block;margin: 0 auto"/>
        </div>
    </div>
    <div class="omb_login">
        @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Url.Action("Index", "Home") }))
        {
            @Html.AntiForgeryToken()

            <h3 class="omb_authTitle">
                Login or <a href="@Url.Action("Register")">Sign up</a>
            </h3>
            <div class="row omb_row-sm-offset-3 omb_socialButtons omb_login">
                <div class="col-xs-12 col-sm-6">
                    <input name="provider" value="Twitch" style="display: none" />
                    <input name="returnUrl" value="@Url.Action("Index", "Home")" style="display: none" />
                    <button type="submit" class="btn btn-lg btn-block omb_login omb_btn-twitch" title="Log in using your Twitch account"><i class="fa fa-twitch visible-xs"></i><span class="hidden-xs"></span> Login</button>
                </div>
            </div>
        }
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = Url.Action("Index", "Home") }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row omb_row-sm-offset-3 omb_loginOr">
            <div class="col-xs-12 col-sm-6">
                <hr class="omb_hrOr">
                <span class="omb_spanOr">or</span>
            </div>
        </div>
        <div class="row omb_row-sm-offset-3">
            <div class="col-sm-6 col-sm-6">
                <div class="omb_loginForm " action="" autocomplete="off" method="POST">
                    <div class="input-group login login-input" style="width: 100% !important">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input type="text" class="form-control " name="Email" placeholder="Email address">
                    </div>
                    <span class="help-block"></span>
                    <div class="input-group login login-input">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <input type="password" class="form-control " name="password" placeholder="Password">
                        <br/>
                    </div>
                    @*<span class="help-block">Password error</span>*@
                    <button class="btn btn-lg btn-primary btn-block btn-login" type="submit">Get in there!</button>
                </div>
            </div>
        </div>
        <div class="row omb_row-sm-offset-3">
            <div class="col-xs-12 col-sm-3">
                <label class="checkbox">
                    <input name="RememberMe" type="checkbox" value="remember-me"> Remember Me
                </label>
            </div>
            <div class="col-xs-12 col-sm-3">
                <p class="omb_forgotPwd">
                    <a href="@Url.Action("ForgotPassword")">Forgot password?</a>
                </p>
            </div>
        </div>
    }
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}